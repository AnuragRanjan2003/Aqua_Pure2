<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Project3" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorOnPrimary">#FFFFFF</item>
    </style>

    <style name="Theme.Project3" parent="Base.Theme.Project3" />

    <style name="body">
        <item name="fontFamily">@font/baloo_bhaina_2</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bodyOnContainer">
        <item name="fontFamily">@font/baloo_bhaina_2</item>
        <item name="color">@color/on_primary_light</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Title">
        <item name="fontFamily">@font/baloo_bhai</item>
        <item name="color">@color/on_primary_light</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Heading">
        <item name="fontFamily">@font/baloo_bhai</item>
        <item name="color">@color/on_primary_light</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="ThemeOverlay.Project3.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
    <style name="round_corners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>


</resources>